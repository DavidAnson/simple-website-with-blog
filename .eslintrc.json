{
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env":{
    "node": true
  },
  "extends": "eslint:all",
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": "off",
    "max-len": ["error", 100],
    "new-cap": ["error", {"capIsNew": false}],
    "no-extra-parens": ["error", "all", {"ignoreJSX": "multi-line"}],
    "no-magic-numbers": "off",
    "no-process-env": "off",
    "object-curly-newline": ["error", "always"],
    "one-var": ["error", "never"],
    "padded-blocks": ["error", "never"],
    "sort-keys": "off"
  }
}
