{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "simple-website-with-blog post content schema for photo",
  "type": "array",
  "items": {
    "description": "Information about photo",
    "type": "object",
    "properties": {
      "caption": {
        "description": "Photo caption",
        "type": "string"
      },
      "image": {
        "description": "Path to photo",
        "type": "string"
      },
      "image2x": {
        "description": "Path to photo at 2x",
        "type": "string",
        "default": null
      }
    },
    "required": [
      "caption",
      "image"
    ],
    "additionalProperties": false
  }
}
