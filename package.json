{
  "name": "simple-website-with-blog",
  "version": "0.1.0",
  "description": "A simple web site that includes a blog",
  "private": true,
  "main": "app.js",
  "author": "David Anson (https://dlaa.me/)",
  "license": "MIT",
  "homepage": "https://github.com/DavidAnson/simple-website-with-blog",
  "repository": {
    "type": "git",
    "url": "https://github.com/DavidAnson/simple-website-with-blog.git"
  },
  "bugs": "https://github.com/DavidAnson/simple-website-with-blog/issues",
  "scripts": {
    "lint": "eslint *.js *.jsx sites/**/*.jsx",
    "compile": "tsc --allowJs --jsx react --target ES2015 sites/sample-text/render.jsx sites/sample-photo/render.jsx",
    "server": "npm run compile && node app.js",
    "start": "node app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "nodemon --ext js,jsx,json,html,md --ignore **/render.js --exec npm run server"
  },
  "engines": {
    "node": "8.x"
  },
  "dependencies": {
    "compression": "~1.7.2",
    "express": "~4.16.3",
    "helmet": "~3.12.1",
    "highlight.js": "~9.12.0",
    "markdown-it": "~8.4.2",
    "pify": "~3.0.0",
    "react": "~16.4.1",
    "react-dom": "~16.4.1"
  },
  "devDependencies": {
    "eslint": "~4.19.1",
    "nodemon": "~1.17.5",
    "typescript": "~2.9.2"
  }
}
